<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:screenOrientation="portrait"
    android:configChanges="orientation|keyboardHidden"
    tools:context="com.example.admin.heartbeat.Game1">

    <LinearLayout  android:layout_width="match_parent" android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:orientation="vertical">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:weightSum="1"
            android:gravity="center|center_horizontal"
            android:layout_weight="0.05">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_weight="0.1"
                android:gravity="fill_horizontal">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="0.1">

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Score"
                        android:textColor="#0000FF"
                        android:id="@+id/textView8"
                        android:layout_weight="0.1"
                        android:gravity="center_horizontal" />

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="000"
                        android:id="@+id/blueScore"
                        android:textColor="#0000FF"
                        android:textSize="40dp"
                        android:gravity="center_vertical|center_horizontal"
                        android:layout_weight="0.9" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_weight="0.1"
                    android:gravity="center_horizontal">

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="Time"
                        android:id="@+id/textView5"
                        android:layout_weight="0.1"
                        android:gravity="center_horizontal"
                        android:textColor="@color/black" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="00"
                        android:id="@+id/textTime"
                        android:layout_weight="0.1"
                        android:textColor="@color/black"
                        android:textSize="40dp" />

                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="0.1"
                    android:visibility="visible">

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Score"
                        android:id="@+id/textView9"
                        android:textColor="@color/red"
                        android:layout_weight="0.1"
                        android:gravity="center_horizontal" />

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="000"
                        android:id="@+id/redScore"
                        android:textColor="@color/red"
                        android:textSize="40dp"
                        android:layout_weight="0.9"
                        android:visibility="visible"
                        android:gravity="center_vertical|center_horizontal" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.9">

            <ProgressBar
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/progressBarBlue"
                android:layout_weight="0.45"
                android:background="@drawable/apex"
                android:progress="75"
                android:progressTint="@color/blue"
                android:max="100" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_weight="0.1" />

            <ProgressBar
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/progressBarRed"
                android:layout_weight="0.45"
                android:background="@drawable/hsred1"
                android:max="100"
                android:progress="50"
                android:progressTint="@color/red" />

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.1">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Which heart sound matches:"
                android:id="@+id/textView7"
                android:layout_weight="0.1"
                android:layout_gravity="left"
                android:gravity="left"
                android:textColor="@color/black" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Aortic Stenosis"
                android:id="@+id/textCondition"
                android:layout_weight="0.90"
                android:textSize="40dp"
                android:gravity="center_vertical|center_horizontal"
                android:textColor="#000000" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:weightSum="1"
            android:layout_weight="0.05"
            android:gravity="center_vertical|center_horizontal"
            android:showDividers="middle">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/redButton"
                android:layout_weight="0.5"
                android:src="@drawable/gameselecta"
                android:scaleType="centerCrop"
                android:adjustViewBounds="true"
                android:background="@color/white" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/blueButton"
                android:layout_weight="0.5"
                android:src="@drawable/gameselectb"
                android:scaleType="centerCrop"
                android:background="@color/white"
                android:adjustViewBounds="true" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
