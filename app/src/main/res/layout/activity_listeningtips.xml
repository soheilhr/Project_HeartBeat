<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.admin.heartbeat.Listeningtips"
    android:orientation="vertical"
    android:backgroundTint="@color/red">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Wrong Answer"
        android:id="@+id/textView3"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="24dp"
        android:textColor="@color/red"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Condition :"
        android:id="@+id/textView12"
        android:textSize="20dp"
        android:layout_weight="0.05" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="The condition"
        android:id="@+id/Condtextview"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:gravity="center_horizontal"
        android:layout_weight="0.1"
        android:layout_gravity="center_vertical" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Corresponds to:"
        android:id="@+id/textView10"
        android:textSize="20dp"
        android:layout_weight="0.05" />

    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/CorrectBar"
        android:background="@drawable/hsblue1"
        android:layout_weight="0.6"
        android:indeterminate="false"
        android:progress="0" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Listening Tips:"
        android:id="@+id/textView13"
        android:textSize="20dp"
        android:layout_weight="0.05" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="TIPS TIPS \nTIPS"
        android:id="@+id/Tipstextview"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:layout_weight="0.6" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Waiting time:"
        android:id="@+id/textView4"
        android:layout_weight="0.05" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_weight="0.1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:text="Waiting Time"
            android:id="@+id/waitTimeTextview"
            android:layout_gravity="center_vertical|left"
            android:layout_weight="0.4"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:gravity="center_vertical|center_horizontal" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.3" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:text="Ready"
            android:id="@+id/readyButton"
            android:layout_gravity="center_vertical|right"
            android:layout_weight="0.3"
            android:onClick="readyfunc"
            android:visibility="invisible" />
    </LinearLayout>
</LinearLayout>
